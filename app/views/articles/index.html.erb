      <span class="navbar-brand">BLOG</span>
      <span>
        <%= link_to "Menu", articles_path, class:"btn btn-success navbar-btn" %>
      </span>
      <span>
        
        <%= link_to "New article", new_article_path,  class:"btn btn-success navbar-btn" %> 
